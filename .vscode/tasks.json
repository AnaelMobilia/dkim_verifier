	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build xpi",
			"type": "shell",
			"command": "rm ./dkim_verifier@pl.xpi; & \\\"$($Env:ProgramFiles)/7-Zip/7z.exe\\\" a -tzip -mx1 dkim_verifier@pl.xpi ./chrome/ ./components/ ./data/ ./defaults/ '-i!modules/*.js' '-i!modules/*.jsm' ./CHANGELOG.txt ./chrome.manifest ./icon.png ./icon_32.png ./install.rdf ./LICENSE.txt ./README.md ./THIRDPARTY_LICENSE.txt",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build xpi for beta",
			"type": "shell",
			"command": "rm ./dkim_verifier@pl-beta.xpi; & \\\"$($Env:ProgramFiles)/7-Zip/7z.exe\\\" a -tzip -mx1 dkim_verifier@pl-beta.xpi ./chrome/ ./components/ ./data/ ./defaults/ '-i!modules/*.js' '-i!modules/*.jsm' ./CHANGELOG.txt ./chrome.manifest ./icon.png ./icon_32.png ./LICENSE.txt ./manifest.json ./README.md ./THIRDPARTY_LICENSE.txt",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
